<div class="jumbotron text-center">
    <h1 class="white montserrat">Criteo Football Club</h1>
    <p class="lead white montserrat">Welcome! Join our next game!</p>
</div>
<row>
<% if user_signed_in? %>

<div class="col-md-6">
  <div class="well">
    <h2 class="text-center">Next game:</h2>
    <p>Address: <%= @game.address %></p>
    <p>Time: <%= @game.time %></p>
    <p>Players: <%= @game.users.length %></p>
    <br/>
    <%= link_to "Join the game", edit_game_path(id: @game.id), class: 'btn btn-primary btn-lg btn-block' %>
  </div>
</div>
<div class="col-md-6">
  <div class="well">
    <h2 class="text-center">Best scorers</h2>
    <ol>
        <li>aaaaaaaaa</li>
        <li>bbbbbbbbb</li>
        <li>ccccccccc</li>
        <li>ddddddddd</li>
    </ol>
  </div>
</div>
<% else %>
<div class="col-md-6">
    <div class="well">
      <h2 class="text-center">Join Us</h2>
      <h4>Sign up and join the Club!</h4>
      <br/>
      <%= link_to "Join us", new_user_registration_path, class: 'btn btn-primary btn-lg btn-block' %>
    </div>
</div>

<div class="col-md-6">
  <div class="well">
    <h2 class="text-center">Next game:</h2>
    <p>Address: <%= @game.address %></p>
    <p>Time: <%= @game.time %></p>
    <p>Players: 10</p>
    <br/>
    <%= link_to "Join the game", "#", class: 'btn btn-primary btn-lg btn-block' %>
  </div>
</div>
<% end %>
</row>